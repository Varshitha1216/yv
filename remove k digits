class Solution {
public:
    string removeKdigits(string num, int k) {
         string result;
        
        for (char digit : num) {
            // While we can remove digits and last digit in result is greater than current
            while (k > 0 && !result.empty() && result.back() > digit) {
                result.pop_back();
                k--;
            }
            result.push_back(digit);
        }
        
        // If k still remains, remove from the end
        while (k > 0 && !result.empty()) {
            result.pop_back();
            k--;
        }
        
        // Remove leading zeros
        int start = 0;
        while (start < (int)result.size() && result[start] == '0') {
            start++;
        }
        
        result = result.substr(start);
        
        return result.empty() ? "0" : result;
    }
};
